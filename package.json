{
  "name": "vrplike",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,workers -c blue,magenta \"npm run dev --workspace @vrplike/api\" \"npm run dev --workspace @vrplike/workers\"",
    "build": "npm run build --workspace @vrplike/shared && npm run build --workspace @vrplike/config && nest build api",
    "build:workers": "npm run build --workspace @vrplike/shared && npm run build --workspace @vrplike/config && nest build workers",
    "start:api": "node dist/apps/api/main.js",
    "start:workers": "node dist/apps/workers/main.js",
    "signer:build:agent:win": "pnpm --filter @vrplike/edo-signer-agent package:win",
    "signer:build:tray-host:win": "dotnet publish apps/edo-signer-tray-host -c Release -r win-x64 -p:PublishSingleFile=true -p:SelfContained=true -p:DebugType=None -p:DebugSymbols=false -o installer/build",
    "signer:prepare:installer": "node scripts/edo/prepare-signer-installer-build.js",
    "signer:publish:web-download": "node scripts/edo/publish-windows-signer-download.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "lint": "echo \"TODO: add lint\"",
    "test": "jest --config jest.config.cjs",
    "test:ci": "jest --config jest.config.cjs --runInBand",
    "test:api": "jest --config jest.config.cjs --runInBand apps/api",
    "postinstall": "prisma generate",
    "seed:rule-templates": "node scripts/seed-rule-templates.js",
    "demo:seed": "node scripts/seed-demo.js",
    "demo:reset": "node scripts/seed-demo.js",
    "demo:seed:ui": "node scripts/seed-demo-ui.ts",
    "demo:curl": "PRINT_ONLY=1 bash scripts/demo-flow.sh",
    "smoke": "bash scripts/smoke.sh",
    "smoke:legal-entities": "bash scripts/smoke-legal-entities.sh",
    "smoke:legal-entity-fk": "bash scripts/smoke-legal-entity-global-fk.sh",
    "smoke:auth-login": "bash scripts/smoke-auth-login-collision.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@prisma/client": "^5.22.0",
    "@vrplike/config": "workspace:*",
    "@vrplike/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^4.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "pkg": "5.8.1",
    "prisma": "^5.9.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.0"
  }
}
